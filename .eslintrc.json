{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb/base",
        "prettier",
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": [2, "never"],
        "react/jsx-uses-react": 2,
        "react/jsx-uses-vars": 2,
        "react/react-in-jsx-scope": 2,
        "import/prefer-default-export": "off",
        "no-plusplus": 0,
        "no-unreachable": 0,
        "import/no-unresolved": 0,
        "no-param-reassign": 0,
        "quotes": [2, "single", { "avoidEscape": true }],
        "array-callback-return": 0
    }
}
